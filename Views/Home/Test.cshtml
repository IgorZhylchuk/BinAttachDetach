    <script>
        function AttachDetach() {
            $('#addBin').removeAttr('hidden').dialog({
                autoOpen: true,
                modal: true,
                draggable: true,
                title: "Enter bin number",
                position: { my: "center", at: "center", of: window },
                resizable: false,
                height: 'auto',
                width: 500,
                close: function () {
                    $(this).closest('.ui-dialog-content').dialog('close');
                   // setTimeout(function () {
